<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    tools:context="e.joepassanante.trailapiapp.FavoritesHomeMenuFragment">
    <TextView
        android:layout_row="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a list of all your saved searchs! Click on one to view options such as view search or remove from favorites! No favorites being shown? Go to the search page and add a search to your favorites list!"/>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/SearchesListContainer"/>


</GridLayout>
