<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:isScrollContainer="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LandscapeSearchHolder"
    android:layout_height="wrap_content"
    tools:context="e.joepassanante.trailapiapp.SearchHolderActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchinfo"
        android:textSize="18sp"
        android:text="@string/howtosearch"
        />
    <fragment
        android:id="@+id/list_frag"
        class="e.joepassanante.trailapiapp.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</ScrollView>